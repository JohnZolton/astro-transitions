---
import Navbar from "../components/navbar.astro";
import Layout from "../layouts/Layout.astro";
const imageFiles = [
  "img9.png",
  "img7.jpg",
  "img5.jpg",
  "img1.jpg",
  "img2.png",
  "img6.jpg",
  "img3.png",
];
---
<Layout title="Murph">

<div class="flex justify-center flex-col items-center max-w-2xl">
    <div
    class="text-5xl font-semibold"
    transition:name="murph"
    >Murph</div>
  <div class="columns-1 gap-8 sm:columns-2 md:columns-3">
    {
      imageFiles &&
        imageFiles.map((image, index) => (
          <img
            src={`/murph/${image}`}
            alt={image}
            width={300}
            height={200}
            class="my-8 w-full transform overflow-hidden rounded-xl transition-transform duration-500 ease-in-out hover:scale-105"
          />
        ))
    }
  </div>
</div>

</Layout>